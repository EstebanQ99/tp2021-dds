</head>

<!-- Aca hay que cambiar todo para que se vea un "Hogar", y no un "Organizacion (Admin)" 
    (Es una pantalla simple para ver todas las asociaciones, no hay ABM de esto) -->

<body id="body">
  {{#if persona}}
  <header>
    <div>
      <a href="index"> <img src="img/logo.png" alt="logo-header"> </a>
    </div>
    <div class="espacio-header"></div>
    <div>
      <nav class="main-nav">
        <ul>
          <li><a href="/usuario/{{persona.id}}">Perfil</a></li>
          <li> Acciones
            <ul id="menu_desplegable">
              <li><a href="/intencion_adopcion">Suscribirse a Adopciones</a></li>
              <li><a href="/mascota_perdida">Informar Mascota Perdida</a></li>
              <li><a href="/dar_en_adopcion">Dar en Adopcion</a></li>
            </ul>
          </li>
          <li><a href="/organizaciones">Organizaciones</a></li>
          <li><a href="/mascotas">Tus Mascotas</a>
          <li><a href="/logout">Cerrar Sesion</a></li>
        </ul>
      </nav>
    </div>
  </header>
  {{else if admin}}
  <header>
    <div>
      <a href="index"> <img src="img/logo.png" alt="logo-header"> </a>
    </div>
    <div class="espacio-header"></div>
    <div>
      <nav class="main-nav">
        <ul>
          <li><a href="/usuarios">Usuarios</a></li>
          <li><a href="/organizaciones">Organizaciones</a></li>
          <li><a href="/logout">Cerrar Sesion</a></li>
        </ul>
      </nav>
    </div>
  </header>

  {{else}}
  <header>
    <div>
      <a href="index"> <img src="img/logo.png" alt="logo-header"> </a>
    </div>
    <div class="espacio-header"></div>
    <div>
      <nav class="main-nav">
        <ul>
          <li><a href="/organizaciones">Organizaciones</a></li>
          <li><a href="/login">Iniciar Sesion</a></li>
        </ul>
      </nav>
    </div>
  </header>

  {{/if}}

  <div class="main_container">
    <div class="form-title-container">
      <h3>Organizaciones</h3>
    </div>
    <table class="tabla" id="tabla">
      <thead>
        <th>Nombre</th>
        <th>Usuario</th>
      </thead>
      <tbody>
        {{#each organizaciones}}
        <tr>
          <td><i class="fas fa-home"></i> {{nombre}}</td>
          <td>{{usuario}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</body>


<!-- ================= MODAL ELIMINACION ================== -->
