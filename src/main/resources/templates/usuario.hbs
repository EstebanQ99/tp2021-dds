          <label for="" style="font-weight: bold;">{{persona.documento.tipoDoc}}</label>
        </div>

        <div class="grid-item">
          <label for="">Nro Documento</label>
          <label for="" style="font-weight: bold;">{{persona.documento.nroDoc}}</label>
        </div>

        <div class="grid-item">
          <label for="">Fecha de Nacimiento</label>
          <label for="" style="font-weight: bold;">{{persona.fechaNac}}</label>
        </div>

        <div class="grid-item" style="visibility:hidden;">
          <input type="text" name="" value="" class="text-input">
        </div>

        <div class="grid-item">
          <input type="submit" name="" {{#if persona}} value="MODIFICAR" {{else}} value="GUARDAR" {{/if}} class="btn-container btn-submit">
        </div>
