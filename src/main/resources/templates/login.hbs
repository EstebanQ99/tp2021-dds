                <div class="grid-item">
                    <input type="password" name="contrasenia" class="text-input" required="required"
                        placeholder="Contraseña">
                </div>

                <div>
                     <button type="submit" class="btn-login btn-login-submit">Ingresar</button>
                </div>

                <nav>
                    <a href="/registro_usuario" class="nav-login"> ¿No tenés cuenta? Registrate</a>
                </nav>

                <nav>
                    <a href="/registro_organizacion" class="nav-login"> Registro para organizaciones</a>
                </nav>
            </form>
        </div>
    </div>
